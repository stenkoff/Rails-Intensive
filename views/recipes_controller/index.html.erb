<div style="display: flex; flex-direction: column; align-items: center">
  <h1 style = "font-family: Arial, sans-serif; color: black">Recipes</h1>
  <div>
    <% @recipes.each do |recipe|%>

      <li style="list-style: none; text-align: center">
        <a style = "font-family: Arial, sans-serif; color: black" href= "/recipes/<%=recipe[:id]%>" ><%= recipe[:name] %></a>
      </li>

    <% end %>
  </div>
</div>
